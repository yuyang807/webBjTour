<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yy.tourweb.web.dto.TPicDto">

    <sql id="Base_Column_List" >
         id, pic_no, pic_name, file_url, md5, is_main, is_main_all
    </sql>

    <insert id="insert" parameterType="com.yy.tourweb.web.dto.TPicDto">
       INSERT into t_pic
       <trim prefix="(" suffix=")" suffixOverrides="," >
        <if test="id != null ">
          id,
        </if>
        <if test="picNo != null ">
          pic_no,
        </if>
        <if test="picName != null ">
          pic_name,
        </if>
        <if test="fileUrl != null ">
          file_url,
        </if>
        <if test="md5 != null ">
          md5,
        </if>
        <if test="isMain != null ">
          is_main,
        </if>
        <if test="isMainAll != null ">
          is_main_all,
        </if>
       </trim>
       <trim prefix="values (" suffix=")" suffixOverrides="," >
        <if test="id != null ">
          #{id},
        </if>
        <if test="picNo != null ">
          #{picNo},
        </if>
        <if test="picName != null ">
          #{picName},
        </if>
        <if test="fileUrl != null ">
          #{fileUrl},
        </if>
        <if test="md5 != null ">
          #{md5},
        </if>
        <if test="isMain != null ">
          #{isMain},
        </if>
        <if test="isMainAll != null ">
          #{isMainAll},
        </if>
       </trim>
    </insert>

    <delete id="deleteByPrimaryKey" parameterType="com.yy.tourweb.web.dto.TPicDto">
       DELETE FROM t_pic WHERE id = #{id};
    </delete>

    <delete id="delete" parameterType="com.yy.tourweb.web.dto.TPicDto">
       DELETE FROM t_pic 
       <trim prefix="WHERE" prefixOverrides="AND">
        <if test="id != null ">
          AND id = #{id} 
        </if>
        <if test="picNo != null ">
          AND pic_no = #{picNo} 
        </if>
        <if test="picName != null ">
          AND pic_name = #{picName} 
        </if>
        <if test="fileUrl != null ">
          AND file_url = #{fileUrl} 
        </if>
        <if test="md5 != null ">
          AND md5 = #{md5} 
        </if>
        <if test="isMain != null ">
          AND is_main = #{isMain} 
        </if>
        <if test="isMainAll != null ">
          AND is_main_all = #{isMainAll} 
        </if>
       </trim>
    </delete>

    <update id="update" parameterType="com.yy.tourweb.web.dto.TPicDto">
       UPDATE t_pic
       <trim prefix="SET" suffixOverrides=",">
        <if test="picNo != null ">
          pic_no = #{picNo} ,
        </if>
        <if test="picName != null ">
          pic_name = #{picName} ,
        </if>
        <if test="fileUrl != null ">
          file_url = #{fileUrl} ,
        </if>
        <if test="md5 != null ">
          md5 = #{md5} ,
        </if>
        <if test="isMain != null ">
          is_main = #{isMain} ,
        </if>
        <if test="isMainAll != null ">
          is_main_all = #{isMainAll} ,
        </if>
        update_date=current_timestamp(),
       </trim>
       WHERE id = #{id}
       <if test="updateDate != null" >
          AND update_date = #{updateDate}
       </if>
    </update>

    <select id="query" parameterType="com.yy.tourweb.web.dto.TPicDto" resultType="TPicDto">
       SELECT <include refid="Base_Column_List" />
       FROM t_pic
       <trim prefix="WHERE" prefixOverrides="AND">
        <if test="id != null ">
          AND id = #{id} 
        </if>
        <if test="picNo != null ">
          AND pic_no = #{picNo} 
        </if>
        <if test="picName != null ">
          AND pic_name = #{picName} 
        </if>
        <if test="fileUrl != null ">
          AND file_url = #{fileUrl} 
        </if>
        <if test="md5 != null ">
          AND md5 = #{md5} 
        </if>
        <if test="isMain != null ">
          AND is_main = #{isMain} 
        </if>
        <if test="isMainAll != null ">
          AND is_main_all = #{isMainAll} 
        </if>
       </trim>
       <if test="orderByStr != null">
       order by ${orderByStr}
       </if>
    </select>
    <select id="count" parameterType="com.yy.tourweb.web.dto.TPicDto" resultType="java.lang.Long">
       SELECT count(*) FROM t_pic
       <trim prefix="WHERE" prefixOverrides="AND">
        <if test="id != null ">
          AND id = #{id} 
        </if>
        <if test="picNo != null ">
          AND pic_no = #{picNo} 
        </if>
        <if test="picName != null ">
          AND pic_name = #{picName} 
        </if>
        <if test="fileUrl != null ">
          AND file_url = #{fileUrl} 
        </if>
        <if test="md5 != null ">
          AND md5 = #{md5} 
        </if>
        <if test="isMain != null ">
          AND is_main = #{isMain} 
        </if>
        <if test="isMainAll != null ">
          AND is_main_all = #{isMainAll} 
        </if>
       </trim>
    </select>
<!-- ##############################################自定义sql分界线##################################################################### -->
	
	<select id="queryPicByLineNo" parameterType="com.yy.tourweb.web.dto.TPicDto" resultType="map">
		select pic_name picName, file_url fileUrl,line_no lineNo 
		from t_line_pic tlp left join t_pic tp on tp.pic_no = tlp.pic_no 
		where line_no = #{lineNo}
	</select>
</mapper>
